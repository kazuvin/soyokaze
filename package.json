{
  "name": "soyokaze-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "mobile:start": "npm run start --workspace=packages/mobile",
    "mobile:android": "npm run android --workspace=packages/mobile",
    "mobile:ios": "npm run ios --workspace=packages/mobile",
    "mobile:web": "npm run web --workspace=packages/mobile",
    "mobile:lint": "npm run lint --workspace=packages/mobile",
    "mobile:test": "npm run test --workspace=packages/mobile",
    "mobile:test:watch": "npm run test:watch --workspace=packages/mobile",
    "mobile:test:ui": "npm run test:ui --workspace=packages/mobile",
    "mobile:reset-project": "npm run reset-project --workspace=packages/mobile",
    "schemas:dev": "npm run dev --workspace=packages/schemas",
    "schemas:generate": "npm run generate --workspace=packages/schemas",
    "schemas:test": "npm run test:schemas --workspace=packages/schemas",
    "schemas:test:client": "npm run test:client --workspace=packages/schemas",
    "api:dev": "npm run dev --workspace=packages/api",
    "api:deploy": "npm run deploy --workspace=packages/api",
    "api:generate": "npm run generate --workspace=packages/api",
    "api:local:migration": "npm run local:migration --workspace=packages/api",
    "api:remote:migration": "npm run remote:migration --workspace=packages/api",
    "api-specs:compile": "npm run api-specs:compile --workspace=packages/api-specs",
    "api-specs:watch": "npm run api-specs:watch --workspace=packages/api-specs",
    "api-specs:validate": "npm run api-specs:validate --workspace=packages/api-specs",
    "api-specs:clean": "npm run api-specs:clean --workspace=packages/api-specs",
    "api-specs:docs": "npm run api-specs:docs --workspace=packages/api-specs",
    "api-specs:generate": "npm run api-specs:generate --workspace=packages/api-specs",
    "lint": "npm run lint --workspace=packages/mobile",
    "test": "npm run test --workspace=packages/mobile",
    "install:all": "npm install"
  },
  "description": "A monorepo for Soyokaze cross-platform mobile application",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazuvin/soyokaze.git"
  },
  "keywords": [
    "monorepo",
    "expo",
    "react-native",
    "mobile",
    "soyokaze"
  ],
  "author": "Kazuya Miura",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kazuvin/soyokaze/issues"
  },
  "homepage": "https://github.com/kazuvin/soyokaze#readme"
}
